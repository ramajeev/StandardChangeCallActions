name: Test Secrets (Reusable)

# This trigger makes the workflow callable by other workflows
on:
  workflow_call:
    secrets:
      SN_USER_NAME1:
        required: true
      SN_PWD1:
        required: true

jobs:
  test-secrets:
    runs-on: ubuntu-latest
    steps:
      - name: Check if secrets are loaded
        run: |
          if [ -z "${{ secrets.SN_USER_NAME1 }}" ]; then
            echo "Error: SN_USER_NAME1 is not set."
            exit 1
          else
            echo "SN_USER_NAME1 is set."
          fi
          
          if [ -z "${{ secrets.SN_PWD1 }}" ]; then
            echo "Error: SN_PWD1 is not set."
            exit 1
          else
            echo "SN_PWD1 is set."
          fi
